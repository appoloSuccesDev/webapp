    <div class="getvalut"></div>
    <script>

// https://appolosuccess.ge/json/price.json
let price = new XMLHttpRequest();
price.open('GET', 'http://127.0.0.1:5500/public/jsons/price.json', true);

price.send();

price.onload = () => {
    if(price.status === 200) {
        let data = price.responseText;
        let pricedata = JSON.parse(data);
        displayJSONData(pricedata);
        console.log("ok")
    }
    else {
        console.log("err")
    }
};






let displayJSONData = (pricedata) => {
    let fm = '';
    let lj = '';
    let lc = '';
    let ll = '';
    let lt = '';
    let lv = '';
    let lr = '';
    let lastedit = ''
  for(let prs of pricedata) {
    lj = `${prs.prices.lj.price}`;
    lc = `${prs.prices.lc.price}`;
    ll = `${prs.prices.ll.price}`;
    lt = `${prs.prices.lt.price}`;
    lv = `${prs.prices.lv.price}`;
    lr = `${prs.prices.lr.price}`;
    fm = `${prs.prices.firstmeet.price}`;
    lastedit = `${prs.lastedit}`
     
  }
  let p0 = document.querySelector('.p0')
  p0.placeholder = `${fm}`
  p0.value = `${fm}`

  let p1 = document.querySelector('.p1')
  p1.placeholder = `${lj}`
  p1.value = `${lj}`

  let p2 = document.querySelector('.p2')
  p2.placeholder = `${lc}`
  p2.value = `${lc}`
  
  let p3 = document.querySelector('.p3')
  p3.placeholder = `${ll}`
  p3.value = `${ll}`

  let p4 = document.querySelector('.p4')
  p4.placeholder = `${lt}`
  p4.value = `${lt}`

  let p5 = document.querySelector('.p5')
  p5.placeholder = `${lv}`
  p5.value = `${lv}`

  let p6 = document.querySelector('.p6')
  p6.placeholder = `${lr}`
  p6.value = `${lr}`

  document.querySelector('.lastedited').innerHTML = lastedit
 
};
    

    </script>
