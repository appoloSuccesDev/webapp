<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=Edge">
    <meta name="description" content="">
    <meta name="keywords" content="">
    <meta name="author" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1"> 
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/font-awesome.min.css">
    <link rel="stylesheet" href="css/style.css">
    <link rel="stylesheet" href="css/fonts.css">
    <title><%- title %></title>
    <style>
        body {
            font-family: "BPG WEB 001 Caps";
            font-size: revert;
            text-decoration: none;
        }
        .getcenter {  
            display: flex;
            align-items: center;
       
        }
        .revs {
            background: #41464b4b;
            height: 100vh;
            width: 100%;
            color: beige;
            display: flex;
            position: relative;
        }
        .revimgs {
            width: 50%;
            height: 100%;
        }
        .revimgs img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }
        .revstxt {
            width: 50%;
            border-top-right-radius: 1rem;
            border-bottom-right-radius: 1rem;
        }
        .txt {
            padding: 0.5rem;
            position: relative;
            height: 100vh;
            border-radius: 5px;
        }
        .revs-title {
            padding: 1rem;
            color: #212529;
            border-radius: 5px;
            margin-bottom: 5px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            background: #41464b4b;

        }
        .revs-text {
            padding: 0.5rem;
            overflow-y: auto;
            background: #41464b4b;
            color: #212529;
            max-height: 90%;
            height: 100%;
            border-radius: 5px;
        }
        .added-dt {
            position: absolute;
            bottom: 1rem;
            font-weight: bolder;
            padding-top: 1rem;
        }
        .backbtn {
            position: absolute;
            top: 0.5rem;
            padding: 10px 5px;
            border-radius: 5px;
            background: #555;
            color: #888;

        }
        .backbtn a {
            padding: 25px;
            color: #fff;
            text-decoration: none;
            font-family: "BPG WEB 001 Caps";

        }
        .palette {
            background: #ffffff;
            color: rgb(0, 0, 0);
            position: fixed;
            right: 0;
            bottom: 0;
            align-items: center;
            z-index: 2;
            padding: 10px;
            cursor: pointer;
        
        }
        .dnone {
            display: none;
        }
  
        label {
            cursor: pointer;
        }
        input[type=color] {
            background: none;
            border: none;
        }
        .sub {
            width: 91px;
            margin: 1rem auto;
        }
        .scrolldown {
            width: 100%;
            text-align: center;
            margin: 1rem 0;
            
        }
                /* width */
        ::-webkit-scrollbar {
            width: 5px;
        }

        /* Track */
        ::-webkit-scrollbar-track {
        background: #41464b4b; 
        }
        
        /* Handle */
        ::-webkit-scrollbar-thumb {
        background: #888; 
        }

        /* Handle on hover */
        ::-webkit-scrollbar-thumb:hover {
        background: #555; 
        }
        .readpdf {
            position: fixed;
            bottom: 9px;
            right: 9px;
            font-size: 24px;
        }
        .readpdf a {
            text-decoration: none;
            color: #f1f1f1;
            box-shadow: 0 0 5px #212529;
        }
        @media screen and (max-width: 500px)  {
            .revimgs {
                width: 100%;
            }
            .revs {
               
                display: flex;
                flex-direction: column;
            }
            .revstxt {
                width: 100%;
            }
            .revs-title {
                font-size: revert;
            }
        }
    </style>
</head>
<body>
    <!-- <div class="palette">
        <i class="fa-solid fa-palette"></i>
    </div> -->
   

    <%- review %>

    
    <script>
        function blogcolors() {
            let bg = document.querySelector('#bg').value 
            let fontcolor = document.querySelector('#fontcolor').value
            let setbg = document.querySelector('.revs-title')
            let textbg = document.querySelector('.revs-text')

            textbg.style.background = bg
            textbg.style.color = fontcolor
            setbg.style.background = bg
            setbg.style.color = fontcolor

            document.querySelector('.scrolldown').style.display = 'block'
        }
    </script>
    <script src="https://kit.fontawesome.com/8340299b99.js"></script>
    <script src="js/jquery.js"></script>
    <script src="js/particles.min.js"></script>
    <script src="js/app.js"></script>
    <script src="js/jquery.parallax.js"></script>
    <script src="js/smoothscroll.js"></script>
    <script src="js/custom.js"></script> 
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js"></script>
</body>
</html>